<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mBlackBold"
    app:layout_editor_absoluteX="0dp"
    app:layout_editor_absoluteY="0dp"
    android:fillViewport="true"
    tools:context=".Fragments.HomeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:paddingTop="25dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_home"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_icon_awesome_user_alt"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/mBlackSmooth"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/tv_hi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/h_tv1"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintTop_toTopOf="@id/civ_home"
            app:layout_constraintStart_toEndOf="@id/civ_home"
            android:layout_marginLeft="10dp"
            android:textSize="23dp"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name !"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:textSize="23dp"
            app:layout_constraintTop_toTopOf="@id/civ_home"
            app:layout_constraintStart_toEndOf="@id/tv_hi"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/h_tv2"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toBottomOf="@id/tv_hi"
            app:layout_constraintBottom_toBottomOf="@id/civ_home"
            app:layout_constraintStart_toEndOf="@id/civ_home"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_top_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/h_tv3"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/civ_home"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_promo"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_top_rating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_top_song"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>